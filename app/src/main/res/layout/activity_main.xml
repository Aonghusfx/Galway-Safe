<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnICE2"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/btnICE1"
        android:layout_alignStart="@+id/btnICE1"
        android:layout_alignLeft="@+id/btnICE1"
        android:layout_marginTop="25dp"
        android:background="@drawable/my_button_bg"
        android:drawableBottom="@mipmap/ic_contact_phone_white_24dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:text="ICE contact 2"
        android:textColor="#ffffff" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnICE1"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_button_bg"
        android:drawableBottom="@mipmap/ic_contact_phone_white_24dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:textColor="#ffffff"
        tools:text="ICE CONTACT 1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnICE3"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/btnICE2"
        android:layout_alignStart="@+id/btnICE2"
        android:layout_alignLeft="@+id/btnICE2"
        android:layout_marginTop="25dp"
        android:background="@drawable/my_button_bg"
        android:drawableBottom="@mipmap/ic_contact_phone_white_24dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:text="ICE contact 3"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnICE1"
        android:layout_alignLeft="@+id/btnICE1"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"

        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        android:lines="2"
        android:text="Select ICE Contacts"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <!--<ImageView-->
    <!--android:id="@+id/imageView"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:src="@mipmap/ic_add_alert_white_36dp"-->
    <!--app:srcCompat="@mipmap/ic_add_alert_white_36dp"-->
    <!--android:layout_alignTop="@+id/textView"-->
    <!--android:layout_alignLeft="@+id/btnICE1"-->
    <!--android:layout_alignStart="@+id/btnICE1" />-->

    <ImageView
        android:id="@+id/imageViewLocation"
        android:layout_width="73dp"
        android:layout_height="57dp"
        app:srcCompat="@android:drawable/ic_menu_mylocation" />

    <ImageView
        android:id="@+id/imageViewMovie"
        android:layout_width="73dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="325dp"
        android:layout_marginTop="12dp"
        android:scaleX="1.6"
        android:scaleY="1.6"
        app:srcCompat="@android:drawable/ic_menu_slideshow" />

    <TextView
        android:id="@+id/text_explaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnICE3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_horizontal"
        android:lines="3"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveICEBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_explaining"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/black_overlay"
        android:text="Save ICE Contacts"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/termsICEBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saveICEBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@color/black_overlay"
        android:text="Terms"
        android:textColor="@color/white"/>


</RelativeLayout>